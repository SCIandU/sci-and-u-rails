.row
  .col-md-1
  .col-md-10
    %h2 Welcome to SCI and U
    = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
      = f.hidden_field :role, value: "registered"
      = devise_error_messages!
      .row
        .col-md-4
          Intro Paragraph.  What does this program offer?
          %p
        .col-md-4
          .form-group
            = f.label :first_name
            %br/
            = f.text_field :first_name, class: "form-control"
          .form-group
            = f.label :last_name
            %br/
            = f.text_field :last_name, class: "form-control"
          .form-group
            = f.label :login
            %br/
            = f.text_field :login, class: "form-control"
          .form-group
            = f.label :email
            %br/
            = f.email_field :email, class: "form-control"
          .form-group
            = f.label :password
            - if @minimum_password_length
              %em
                (#{@minimum_password_length} characters minimum)
            %br/
            = f.password_field :password, autocomplete: "off", class: "form-control"
          .form-group
            = f.label :password_confirmation
            %br/
            = f.password_field :password_confirmation, autocomplete: "off", class: "form-control"
        .col-md-1
        .col-md-4
          .form-group
            <b>My Profile Image</b>
            %br/
            / = f.file_field "", class: "form-control"    
            = f.label :profile_image, class: "col-sm-4 control-label"
            = f.file_field :profile_image           
          .form-group
            = f.label :age
            %br/
            = f.text_field :age, class: "form-control"
          .form-group
            = f.label :injury_level
            %br/
            = f.text_field :injury_level, class: "form-control"
          / .form-group
          /   = f.label :job_title
          /   %br/
          /   = f.text_field :job_title, class: "form-control"
          .form-group
            <b>I am a ...</b>
            %br/
            = f.text_field :role, class: "form-control"                 
          .form-group
            <b>About Me</b>
            %br/
            = f.text_area :blurb, class: "form-control", rows: '10'
          .form-group
            .actions
              = f.submit "Signup", class: "btn btn-default  btn-lg"
              = render "devise/shared/links"
/spacer row
.row
  .col-md-1
  %p &nbsp
  %p &nbsp  